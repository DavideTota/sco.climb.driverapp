<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="*widget_id*" version="*version*" android-versionCode="*version_code*"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>*app_name*</name>
    <description>
      The Driver App of the CLIMB Project
    </description>
    <author email="info@smartcommunitylab.it" href="http://www.smartcommunitylab.it/">
      SmartCommunityLab
    </author>
    <content src="index.html" />
    <access origin="*" />
    <access launch-external="yes" origin="mailto:*" />
    <access launch-external="yes" origin="tel:*" />
    <access launch-external="yes" origin="geo:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-navigation href="*" />
    <preference name="webviewbounce" value="false" />
    <!-- <preference name="UIWebViewBounce" value="false" /> -->
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="22" />
    <preference name="android-targetSdkVersion" value="29" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="orientation" value="portrait" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <platform name="android">
        <icon density="ldpi" src="*resource_folder*/resources/android/icon/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="*resource_folder*/resources/android/icon/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="*resource_folder*/resources/android/icon/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="*resource_folder*/resources/android/icon/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="*resource_folder*/resources/android/icon/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="*resource_folder*/resources/android/icon/drawable-xxxhdpi-icon.png" />
        <splash density="port-ldpi" src="*resource_folder*/resources/android/splash/drawable-port-ldpi-screen.png" />
        <splash density="port-mdpi" src="*resource_folder*/resources/android/splash/drawable-port-mdpi-screen.png" />
        <splash density="port-hdpi" src="*resource_folder*/resources/android/splash/drawable-port-hdpi-screen.png" />
        <splash density="port-xhdpi" src="*resource_folder*/resources/android/splash/drawable-port-xhdpi-screen.png" />
        <splash density="port-xxhdpi" src="*resource_folder*/resources/android/splash/drawable-port-xxhdpi-screen.png" />
        <splash density="port-xxxhdpi" src="*resource_folder*/resources/android/splash/drawable-port-xxxhdpi-screen.png" />
        <splash density="land-ldpi" src="*resource_folder*/resources/android/splash/drawable-land-ldpi-screen.png" />
        <splash density="land-mdpi" src="*resource_folder*/resources/android/splash/drawable-land-mdpi-screen.png" />
        <splash density="land-hdpi" src="*resource_folder*/resources/android/splash/drawable-land-hdpi-screen.png" />
        <splash density="land-xhdpi" src="*resource_folder*/resources/android/splash/drawable-land-xhdpi-screen.png" />
        <splash density="land-xxhdpi" src="*resource_folder*/resources/android/splash/drawable-land-xxhdpi-screen.png" />
        <splash density="land-xxxhdpi" src="*resource_folder*/resources/android/splash/drawable-land-xxxhdpi-screen.png" />
    </platform>
    <platform name="ios">
        <icon height="57" src="*resource_folder*/resources/ios/icon/icon.png" width="57" />
        <icon height="114" src="*resource_folder*/resources/ios/icon/icon@2x.png" width="114" />
        <icon height="40" src="*resource_folder*/resources/ios/icon/icon-40.png" width="40" />
        <icon height="80" src="*resource_folder*/resources/ios/icon/icon-40@2x.png" width="80" />
        <icon height="120" src="*resource_folder*/resources/ios/icon/icon-40@3x.png" width="120" />
        <icon height="50" src="*resource_folder*/resources/ios/icon/icon-50.png" width="50" />
        <icon height="100" src="*resource_folder*/resources/ios/icon/icon-50@2x.png" width="100" />
        <icon height="60" src="*resource_folder*/resources/ios/icon/icon-60.png" width="60" />
        <icon height="120" src="*resource_folder*/resources/ios/icon/icon-60@2x.png" width="120" />
        <icon height="180" src="*resource_folder*/resources/ios/icon/icon-60@3x.png" width="180" />
        <icon height="72" src="*resource_folder*/resources/ios/icon/icon-72.png" width="72" />
        <icon height="144" src="*resource_folder*/resources/ios/icon/icon-72@2x.png" width="144" />
        <icon height="76" src="*resource_folder*/resources/ios/icon/icon-76.png" width="76" />
        <icon height="152" src="*resource_folder*/resources/ios/icon/icon-76@2x.png" width="152" />
        <icon height="167" src="*resource_folder*/resources/ios/icon/icon-83.5@2x.png" width="167" />
