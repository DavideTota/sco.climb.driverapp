        <splash height="768" src="*resource_folder*/resources/ios/splash/Default-Landscape~ipad.png" width="1024" />
        <splash height="2048" src="*resource_folder*/resources/ios/splash/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="2732" src="*resource_folder*/resources/ios/splash/Default-Portrait@~ipadpro.png" width="2048" />
