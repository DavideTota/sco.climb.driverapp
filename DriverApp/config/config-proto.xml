        <icon height="87" src="*resource_folder*/resources/ios/icon/icon-small@3x.png" width="87" />
        <splash height="1136" src="*resource_folder*/resources/ios/splash/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" src="*resource_folder*/resources/ios/splash/Default-667h.png" width="750" />
        <splash height="2208" src="*resource_folder*/resources/ios/splash/Default-736h.png" width="1242" />
